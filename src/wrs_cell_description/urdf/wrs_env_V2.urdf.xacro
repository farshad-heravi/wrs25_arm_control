        <visual>
            <geometry>
                <mesh filename="package://robot_description/meshes/bosch_40_40_100.stl" scale="1.0 1.0 7.2"/>
            </geometry>
            <material name="dark_grey">
                <color rgba="0.3 0.3 0.3 1.0"/>
            </material>
