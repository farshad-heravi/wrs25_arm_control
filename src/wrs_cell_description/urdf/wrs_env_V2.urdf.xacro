    <link name="bottle1_link" >
        <visual>
            <geometry>
                <mesh filename="package://robot_description/meshes/bottle.glb" />
            </geometry>
        </visual> </link>
    <link name="bottle2_link" >
        <visual>
            <geometry>
                <mesh filename="package://robot_description/meshes/bottle.glb" />
            </geometry>
        </visual> </link>
    <joint name="world_to_bottle1_joint" type="fixed">
        <parent link="world"/>
        <child link="bottle1_link"/>
